{
  "name": "risk-management",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^18",
    "npm": "^10.9.0"
  },
  "dependencies": {
    "@sap-cloud-sdk/connectivity": "^3.22.2",
    "@sap-cloud-sdk/http-client": "^3.22.2",
    "@sap-cloud-sdk/resilience": "^3.22.2",
    "@sap/cds": "^8",
    "express": "^4",
    "npm": "^10.9.0",
    "sqlite3": "^5.0.0",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.6",
    "@cap-js/sqlite": "^1",
    "@sap/ux-specification": "UI5-1.129"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-risk-management": "cds watch --open risk-management/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "credentials": {
          "destination": "BUSINESS_PARTNER_API_SANDBOX"
        }
      },
      "ONPREM_EXPRESS_APP": {
        "kind": "rest",
        "credentials": {
          "destination": "ONPREM_EXPRESS_APP"
        }
      },
      "db": {
        "kind": "sqlite",
        "model": "./db/schema.cds",
        "credentials": {
          "database": "./db/sqlite.db"
        }
      }
    }
  },
  "sapux": [
    "app/risk-management"
  ]
}
